@model InventaryManagementSystem.Models.Product

@{
    ViewBag.Title = "ProductDetails";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_name)
        </dd>

        <dt>
            @Html.DisplayName("Product Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_qnty)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "UpdateProduct", new { id = Model.id }, new {@class="btn btn-primary"}) 
    @Html.ActionLink("Cancel", "DisplayProduct", "Product", new {@class="btn btn-danger"})
</p>
